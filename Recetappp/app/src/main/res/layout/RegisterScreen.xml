<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="#FF0000">

    <TextView
        android:id="@+id/empecemosText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empecemos"
        android:textSize="48sp"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="95dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingrese para acceder a sus"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="176dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="recetas favoritas y preferencias"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="198dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="personales"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="217dp" />

    <EditText
        android:id="@+id/nombreAlias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Alias"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="302dp" />

    <EditText
        android:id="@+id/passwordUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="355dp" />

    <CheckBox
        android:id="@+id/permaneceLogueado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dejarme logueado"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="431dp" />

    <Button
        android:id="@+id/botonIngreso"
        android:layout_width="264dp"
        android:layout_height="49dp"
        android:backgroundTint="#FFFFFF"
        android:text="Ingresar"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="533dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Olvidó su contraseña?"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="636dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="101dp"
        android:layout_height="30dp"
        android:backgroundTint="#FFFFFF"
        android:text="CLICK AQUI"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="9sp"
        tools:layout_editor_absoluteX="216dp"
        tools:layout_editor_absoluteY="632dp" />

</androidx.constraintlayout.widget.ConstraintLayout>